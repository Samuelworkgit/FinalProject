<%- include('./partials/header.ejs') %>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="mb-1">Financial Reports</h4>
                <p class="text-muted">View and generate financial reports</p>
            </div>
            <div>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#generateReportModal">
                    <i class="bi bi-file-earmark-text"></i> Generate New Report
                </button>
            </div>
        </div>

        <!-- Alert Messages -->
        <% if (successMessage && successMessage.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= successMessage %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (errorMessage && errorMessage.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= errorMessage %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <!-- Financial Overview -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Last 3 Months Overview</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="card summary-card">
                            <i class="bi bi-cash-stack"></i>
                            <div class="balance">Rs <%- totalincome %></div>
                            <div>Total Income</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card summary-card">
                            <i class="bi bi-cart"></i>
                            <div class="balance">Rs <%- totalexpenses %></div>
                            <div>Total Expenses</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card summary-card">
                            <i class="bi bi-piggy-bank"></i>
                            <div class="balance">Rs <%- netsavings %></div>
                            <div>Net Savings</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card summary-card">
                            <i class="bi bi-graph-up"></i>
                            <div class="balance"><%- savingsrate %></div>
                            <div>Savings Rate</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Expense Breakdown -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Expense Breakdown by Category</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <canvas id="expenseChart"></canvas>
                    </div>
                    <div class="col-md-6">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Category</th>
                                        <th>Amount</th>
                                        <th>Percentage</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% 
                                    const totalExpenseAmount = expenseBreakdown.reduce((sum, item) => sum + item.total, 0);
                                    expenseBreakdown.forEach(category => { 
                                        const percentage = ((category.total / totalExpenseAmount) * 100).toFixed(1);
                                    %>
                                        <tr>
                                            <td><%= category._id %></td>
                                            <td>Rs <%= category.total.toFixed(2) %></td>
                                            <td><%= percentage %>%</td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Monthly Trends -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Monthly Trends</h5>
            </div>
            <div class="card-body">
                <canvas id="trendsChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Generate Report Modal -->
    <div class="modal fade" id="generateReportModal" tabindex="-1" aria-labelledby="generateReportModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="generateReportModalLabel">Generate New Report</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/reports/generate" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="reportType" class="form-label">Report Type</label>
                            <select class="form-select" id="reportType" name="reportType" required>
                                <option value="financial-status">Financial Status</option>
                                <option value="expense-breakdown">Expense Breakdown</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="startDate" class="form-label">Start Date</label>
                            <input type="date" class="form-control" id="startDate" name="startDate" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="endDate" class="form-label">End Date</label>
                            <input type="date" class="form-control" id="endDate" name="endDate" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Generate Report</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Initialize Charts -->
    <script>
        // Expense Breakdown Chart
        const expenseCtx = document.getElementById('expenseChart').getContext('2d');
        new Chart(expenseCtx, {
            type: 'pie',
            data: {
                labels: <%- JSON.stringify(expenseBreakdown.map(item => item._id)) %>,
                datasets: [{
                    data: <%- JSON.stringify(expenseBreakdown.map(item => item.total)) %>,
                    backgroundColor: [
                        '#FF6384',
                        '#36A2EB',
                        '#FFCE56',
                        '#4BC0C0',
                        '#9966FF',
                        '#FF9F40'
                    ]
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'right'
                    }
                }
            }
        });

        // Monthly Trends Chart
        const trendsCtx = document.getElementById('trendsChart').getContext('2d');
        const monthlyData = <%- JSON.stringify(monthlyTrends) %>;
        const labels = Object.keys(monthlyData);
        const incomeData = labels.map(label => monthlyData[label].income);
        const expenseData = labels.map(label => monthlyData[label].expenses);

        new Chart(trendsCtx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Income',
                        data: incomeData,
                        backgroundColor: '#36A2EB'
                    },
                    {
                        label: 'Expenses',
                        data: expenseData,
                        backgroundColor: '#FF6384'
                    }
                ]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>