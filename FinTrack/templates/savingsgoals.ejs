        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="mb-1">Savings Goals</h4>
                <p class="text-muted">Track progress towards your financial goals</p>
            </div>
            <div>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSavingsGoalModal">
                    <i class="bi bi-plus-lg"></i> Create New Goal
                </button>
            </div>
        </div>

        <!-- Alert Messages -->
        <% if (successMessage && successMessage.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= successMessage %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (errorMessage && errorMessage.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= errorMessage %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <!-- Savings Goals Summary -->
        <div class="card mb-4">
            <div class="card-header">
                Savings Overview
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card summary-card">
                            <i class="bi bi-piggy-bank"></i>
                            <div class="balance">Rs <%- totalsavings %></div>
                            <div>Total Savings</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card summary-card">
                            <i class="bi bi-trophy"></i>
                            <div class="balance">Rs <%- totalgoalamount %></div>
                            <div>Total Goal Amount</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card summary-card">
                            <i class="bi bi-calendar-check"></i>
                            <div class="balance"><%- activegoal %></div>
                            <div>Active Goals</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Savings Goals List -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Your Savings Goals</h5>
            </div>
            <div class="card-body">
                <% if (savingsGoals && savingsGoals.length > 0) { %>
                    <% savingsGoals.forEach(goal => { %>
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h5 class="mb-1"><i class="bi bi-shield me-2"></i> <%= goal.name %></h5>
                                        <p class="text-muted mb-2"><%= goal.description %></p>
                                        
                                        <div class="mb-2">
                                            <div class="d-flex justify-content-between align-items-center mb-1">
                                                <div>Progress</div>
                                                <div>Rs <%= goal.currentAmount.toFixed(2) %> / Rs <%= goal.targetAmount.toFixed(2) %></div>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar" role="progressbar" style="width: <%= goal.getProgressPercentage() %>%"></div>
                                            </div>
                                        </div>
                                        
                                        <div class="d-flex mb-2">
                                            <div class="me-4">
                                                <small class="text-muted">Target Date</small>
                                                <div><%= new Date(goal.targetDate).toLocaleDateString() %></div>
                                            </div>
                                            <div class="me-4">
                                                <small class="text-muted">Monthly Contribution</small>
                                                <div>Rs <%= goal.monthlyContribution.toFixed(2) %></div>
                                            </div>
                                            <div>
                                                <small class="text-muted">Remaining</small>
                                                <div>Rs <%= goal.getRemainingAmount().toFixed(2) %></div>
                                            </div>
                                        </div>
                                        
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addFundsModal<%= goal._id %>">Add Funds</button>
                                            <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#editGoalModal<%= goal._id %>">Edit Goal</button>
                                            <a href="/savingsgoals/delete/<%= goal._id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this goal?')">Delete</a>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-items-center justify-content-center">
                                        <div class="text-center">
                                            <div style="width: 120px; height: 120px; border-radius: 50%; border: 10px solid #e9ecef; border-top-color: #85bb65; transform: rotate(<%= (goal.getProgressPercentage() * 3.6) - 90 %>deg);" class="mb-2"></div>
                                            <h3 class="mb-0"><%= goal.getProgressPercentage().toFixed(1) %>%</h3>
                                            <div class="text-muted">Completed</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Add Funds Modal -->
                        <div class="modal fade" id="addFundsModal<%= goal._id %>" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Add Funds to <%= goal.name %></h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <form action="/savingsgoals/add-funds/<%= goal._id %>" method="POST">
                                        <div class="modal-body">
                                            <div class="mb-3">
                                                <label for="amount" class="form-label">Amount to Add</label>
                                                <div class="input-group">
                                                    <span class="input-group-text">Rs</span>
                                                    <input type="number" class="form-control" id="amount" name="amount" step="0.01" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-primary">Add Funds</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Edit Goal Modal -->
                        <div class="modal fade" id="editGoalModal<%= goal._id %>" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Edit <%= goal.name %></h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <form action="/savingsgoals/edit/<%= goal._id %>" method="POST">
                                        <div class="modal-body">
                                            <div class="mb-3">
                                                <label for="name" class="form-label">Goal Name</label>
                                                <input type="text" class="form-control" id="name" name="name" value="<%= goal.name %>" required>
                                            </div>
                                            <div class="mb-3">
                                                <label for="targetAmount" class="form-label">Target Amount</label>
                                                <div class="input-group">
                                                    <span class="input-group-text">Rs</span>
                                                    <input type="number" class="form-control" id="targetAmount" name="targetAmount" value="<%= goal.targetAmount %>" step="0.01" required>
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <label for="targetDate" class="form-label">Target Date</label>
                                                <input type="date" class="form-control" id="targetDate" name="targetDate" value="<%= new Date(goal.targetDate).toISOString().split('T')[0] %>" required>
                                            </div>
                                            <div class="mb-3">
                                                <label for="monthlyContribution" class="form-label">Monthly Contribution</label>
                                                <div class="input-group">
                                                    <span class="input-group-text">Rs</span>
                                                    <input type="number" class="form-control" id="monthlyContribution" name="monthlyContribution" value="<%= goal.monthlyContribution %>" step="0.01" required>
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <label for="description" class="form-label">Description</label>
                                                <textarea class="form-control" id="description" name="description" rows="3"><%= goal.description %></textarea>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-primary">Save Changes</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="bi bi-piggy-bank display-1 text-muted"></i>
                        <h5 class="mt-3">No Savings Goals Yet</h5>
                        <p class="text-muted">Create your first savings goal to start tracking your progress!</p>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSavingsGoalModal">
                            Create Your First Goal
                        </button>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Add Savings Goal Modal -->
    <div class="modal fade" id="addSavingsGoalModal" tabindex="-1" aria-labelledby="addSavingsGoalModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addSavingsGoalModalLabel">Create New Savings Goal</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/savingsgoals/create" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="name" class="form-label">Goal Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="e.g. Emergency Fund, Vacation, etc." required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="targetAmount" class="form-label">Target Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">Rs</span>
                                <input type="number" class="form-control" id="targetAmount" name="targetAmount" step="0.01" required>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="targetDate" class="form-label">Target Date</label>
                            <input type="date" class="form-control" id="targetDate" name="targetDate" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="initialAmount" class="form-label">Initial Contribution (Optional)</label>
                            <div class="input-group">
                                <span class="input-group-text">Rs</span>
                                <input type="number" class="form-control" id="initialAmount" name="initialAmount" step="0.01" value="0">
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="monthlyContribution" class="form-label">Monthly Contribution</label>
                            <div class="input-group">
                                <span class="input-group-text">Rs</span>
                                <input type="number" class="form-control" id="monthlyContribution" name="monthlyContribution" step="0.01" required>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="description" class="form-label">Description (Optional)</label>
                            <textarea class="form-control" id="description" name="description" rows="3" placeholder="Describe your savings goal..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Create Goal</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>